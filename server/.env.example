# ===========================================
# Environment Variables for PregMed Backend
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# MongoDB Connection String (required in production)
# Local:  mongodb://localhost:27017/pregmed
# Atlas:  mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/<db>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/pregmed

# Server Port (optional, defaults to 5000)
PORT=5000

# Node Environment (development | production)
NODE_ENV=development

# JWT Secret for authentication (required)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Frontend URL for CORS (optional, for custom domains or Netlify)
# Example (Netlify):
# FRONTEND_URL=https://your-frontend-site.netlify.app
